{
  "name": "Douban Book Helper",
  "version": "0.4.711",
  "manifest_version": 2,
  "description": "增强豆瓣读书对电子书的支持",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Douban Book Helper"
  },

  "content_scripts": [
    {
      "matches": ["http://book.douban.com/subject/*/"],
      "js": ["jquery-1.9.1.min.js", "modifier.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "http://*.duokan.com/",
    "http://tangcha.tc/",
    "http://www.yuncheng.com/",
    "http://www.amazon.cn/"
  ]
}
